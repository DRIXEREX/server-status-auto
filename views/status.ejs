<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" media="screen" href="style.css">
    <link rel="stylesheet" type="text/css" media="screen" href="menu.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&amp;display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4b93946445.js" crossorigin="anonymous"></script>
    <title><%= i > 0 ? i + " services non opérationnels" : "Tous les services sont opérationnels" %> - <%= configuration.hébergeur %></title>
</head>

<body>
    <header>
        <nav>
            <div class="menu">
                <div class="menu-link"><a href="/">Accueil</a></div>
            </div>
        </nav>
        <div class="menu-toggle">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
    </header>
    <script>
        $(document).ready(
            function () {
                $('.menu-toggle').click(function () {
                    $('nav').toggleClass('active')
                    $('.lang-menu').siblings().removeClass('hidden');
                    $('.lang-menu').toggleClass('hidden');
                })

                $('.sub-menu').click(function () {
                    $(this).siblings().removeClass('active');
                    $(this).toggleClass('active');
                    $(this).siblings().removeClass('blue-menu');
                    $(this).toggleClass('blue-menu');
                })
            }
        )
    </script>
    <div class="container">
        <% if(i > 0) {%>
            <div class="status red">
                <i class="fa-regular fa-circle-check"></i>
                <p> Il y'a <%= i %> service<%= i > 1 ? "s" : ""%> non opérationnels !</p>
            </div>
        <%} else {%>
            <div class="status green">
                <i class="fa-regular fa-circle-check"></i>
                <p> Tous les services sont opérationnels !</p>
            </div>
        <%} %>

        <div class="container-incident">
            <div class="box-flex">
                <div class="block-block">
                    <% for (item of items) { %>
                        <div class="box-content">
                            <div class="box">
                                <% if(configuration.montrerLesDesinations === "oui") { %>
                                    <br>
                                    <div class="box-title">
                                        <h3><%= item.name %></h3>
                                        <p><%= item.url %></p>
                                    </div>
                                    <div class="box-servicestatus" style="margin-top: 120px;">
                                        <p><i class="fa-regular fa-circle-check" style="color:<%= item.online ? "green" : "red" %>;"></i><%= item.online ? "Online" : "Offline" %></p>
                                    </div>
                                <%} else { %>
                                    <div class="box-title">
                                        <h3><%= item.name %></h3>
                                    </div>
                                    <div class="box-servicestatus" style="margin-top: 80px;">
                                        <p><i class="fa-regular fa-circle-check" style="color:<%= item.online ? "green" : "red" %>;"></i><%= item.online ? "Online" : "Offline" %></p>
                                    </div> 
                                <%} %>
                            </div>
                        </div>
                    <% } %>
                </div>
               
            </div>
        </div>
    </div>
</body>
</html>